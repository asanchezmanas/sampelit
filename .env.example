# ===========================================
# Sampelit Environment Variables
# Copy this file to .env and fill in values
# ===========================================

# ===========================================
# DATABASE (Supabase)
# ===========================================
DATABASE_URL=postgresql://postgres:[PASSWORD]@db.[PROJECT].supabase.co:5432/postgres
SUPABASE_URL=https://[PROJECT].supabase.co
SUPABASE_ANON_KEY=eyJ...
SUPABASE_SERVICE_KEY=eyJ...

# ===========================================
# AUTHENTICATION
# ===========================================
JWT_SECRET=your-super-secret-jwt-key-min-32-chars
JWT_ALGORITHM=HS256
JWT_EXPIRATION_HOURS=24

# ===========================================
# STRIPE (Billing)
# ===========================================
STRIPE_SECRET_KEY=sk_live_...
STRIPE_PUBLISHABLE_KEY=pk_live_...
STRIPE_WEBHOOK_SECRET=whsec_...
STRIPE_PRICE_ID_STARTER=price_...
STRIPE_PRICE_ID_PRO=price_...
STRIPE_PRICE_ID_ENTERPRISE=price_...

# ===========================================
# EMAIL (SendGrid)
# ===========================================
SENDGRID_API_KEY=SG...
EMAIL_FROM_ADDRESS=noreply@sampelit.com
EMAIL_FROM_NAME=Sampelit

# ===========================================
# APPLICATION
# ===========================================
IS_DEVELOPMENT=false
API_BASE_URL=https://sampelit-api.onrender.com
FRONTEND_URL=https://sampelit.com
ALLOWED_ORIGINS=https://sampelit.com,https://www.sampelit.com

# ===========================================
# RATE LIMITING
# ===========================================
API_RATE_LIMIT=100
TRACKING_RATE_LIMIT=1000

# ===========================================
# OPTIONAL: Analytics / Monitoring
# ===========================================
# SENTRY_DSN=https://...@sentry.io/...
# POSTHOG_API_KEY=phc_...
# LOGFLARE_API_KEY=...
